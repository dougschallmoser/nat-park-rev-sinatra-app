<br>
<h2><%= @posts[0].park.state if @posts[0] %> National Park</h2>
<table class="data">
    <tr>
        <th>Title</th>
        <th>Park Name</th>
        <th>Date Created</th>
        <th>Rating</th>
    </tr>
            <% @posts.each do |post| %>
    <tr>
            <td><a href="../posts/<%= post.id %>"><%= post.title %></a></td>
            <td><%= post.park.name %></td>
            <td><%= post.created_at %></td>
            <td><%= post.rating %></td>
    </tr>
    <% end %>
</table>
<h3><%= 'No reviews yet' if !@posts[0] %></h3>