<br>
<h2>Reviews</h2>
<h3><%= @park.name %> National Park</h3>

<% if !@park.posts[0] %>
    <span class="alert"><%= 'No reviews have been posted yet.' %></span>
<% else %>
    <table class="data">
        <tr>
            <th>Title</th>
            <th>Park Name</th>
            <th>Created</th>
            <th>Rating</th>
        </tr>
                <% @park.posts.order(:created_at => :desc).each do |post| %>
        <tr>
                <td><a href="../posts/<%= post.id %>"><%= post.capitalize_title %></a></td>
                <td><%= post.park.name %></td>
                <td><%= post.convert_time %></td>
                <td><%= post.rating %>/5</td>
        </tr>
        <% end %>
    </table>
<% end %>