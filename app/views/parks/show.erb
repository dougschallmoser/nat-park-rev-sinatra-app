

<table>
<h3><%= @park.name %> National Park</h3>
    <tr>
        <th>Title</th>
        <th>Park Name</th>
        <th>Date Created</th>
        <th>Rating</th>
    </tr>
    <tr class="rev_head_info">
        <% @park.posts.order(:created_at => :desc).each do |post| %>
            <td><a href="../posts/<%= post.id %>"><%= post.title %></a></td>
            <td><%= post.park.name %></td>
            <td><%= post.created_at %></td>
            <td><%= post.rating %></td>
    </tr>
    <tr class="rev_content">
            <td = colspan="4"><%= post.content %></td>
            <% end %>
    </tr>
    <tr class="blank_row"> 
        <td>BLANK</td>
    </tr>
</table>