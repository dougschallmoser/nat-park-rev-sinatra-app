<br>
<h2>Reviews</h2>
<table class="sort">
        <tr>
                <th>Filter By Park:</td>
                <td><select onChange="window.location.href=this.value">>
                        <option value="" selected disabled hidden>none</option>
                        <% @parks.each do |park| %>
                        <option value="/parks/<%= park.slug %>"><%= park.name %></option>
                         <% end %>
                        </select>
                </td>
                <th>Filter By State:</td>
                <td><select onChange="window.location.href=this.value">>
                        <option value="" selected disabled hidden>none</option>
                        <% @parks.each do |park| %>
                        <option value="/parks/states/<%= park.slug_state %>"><%= park.state %></option>
                         <% end %>
                        </select>
                </td>
        </tr>
</table>
<br>
<table class="data">
    <tr>
        <th>Title</th>
        <th>Park Name</th>
        <th>Date Created</th>
        <th>Rating</th>
    </tr>
            <% @posts.order(:created_at => :desc).each do |post| %>
    <tr>
            <td><a href="posts/<%= post.id %>"><%= post.title %></td>
            <td><a href="parks/<%= post.park.slug %>"><%= post.park.name %></a></td>
            <td><%= post.created_at %></td>
            <td><%= post.rating %>/5</td>
    </tr>
    <% end %>
</table>