<h3>Your reviews</h3>

<table>
    <tr>
        <th>Title</th>
        <th>Park Name</th>
        <th>Date Created</th>
        <th>Rating</th>
    </tr>
    <tr class="rev_head_info">
        <% @user.posts.order(:created_at => :desc).each do |post| %>
            <td><a href="../posts/<%= post.id %>"><%= post.title %></td>
            <td><a href="../parks/<%= post.park.slug %>"><%= post.park.name %></a></td>
            <td><%= post.created_at %></td>
            <td><%= post.rating %></td>
            <td><a href="../posts/<%= post.id %>/edit">EDIT POST</a></td>
            <td>DELETE POST</td>
    </tr>
    <tr class="rev_content">
            <td = colspan="6"><%= post.content %></td>
    </tr>
    <tr class="blank_row"> 
        <td>BLANK</td>
    </tr>
        <% end %>
