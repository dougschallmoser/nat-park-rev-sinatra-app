<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h3>Sign In</h3>
<br>
<table>
    <form method="POST" action="/login">
    <tr>
        <td><label for="username">Username: </label></td>
        <td><input type="text" id="username" name="username" size="30" required="required"></td>
    </tr>
    <tr>
        <td><label for="password">Password: </label></td>
        <td><input type="password" id="password" name="password" size="30" required="required"></td>
    </tr>
    <tr>
    <tr class="blank_row"> 
        <td>BLANK</td>
    </tr>
        <td colspan="4"><input type="submit" value="Submit"></td>
    </tr>
</table